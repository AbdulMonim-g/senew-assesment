{
  "info": {
    "_postman_id": "b3f5d3e5-1234-4e6b-8e9b-111111111111",
    "name": "Flash Deal Cart API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Product\",\n  \"sku\": \"SKU-1\",\n  \"price\": 10,\n  \"totalStock\": 200\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Get Product Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}/status",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "{{productId}}",
            "status"
          ]
        }
      }
    },
    {
      "name": "Create Reservation (multi-SKU)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user-1\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"quantity\": 2 }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/reservations",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservations"
          ]
        }
      }
    },
    {
      "name": "Checkout Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user-1\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/reservations/{{reservationId}}/checkout",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservations",
            "{{reservationId}}",
            "checkout"
          ]
        }
      }
    },
    {
      "name": "Cancel Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user-1\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/reservations/{{reservationId}}/cancel",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservations",
            "{{reservationId}}",
            "cancel"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "productId",
      "value": ""
    },
